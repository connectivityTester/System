<?xml version="1.0"?>
<test>
	<module_name>connect_to_target</module_name>
	<variables>
		<variable name="BT_DEVICE_NAME" value="EQUUS1234"/>
		<variable name="BT_DEVICE_ADDRESS" value=""/>
		<variable name="PASSKEY" value=""/>
	</variables>
	<actions>
		<action>
			<command executor="target">execute_callback</command>
			<params>
				<param name="process" value="ScpCtrl_HU"/>
				<param name="callback_name" value="DIS2_SCP_BluetoothProj_SetLocalBluetoothName"/>
				<param name="callback_value" value="~BT_DEVICE_NAME~"/>
			</params>
		</action>
		<action>
			<command executor="target">wait_for_traces</command>
			<params>
				<param name="trace_pattern" value="BtPrj.*requestSetLocalBluetoothName.*Name=#BT_DEVICE_NAME#"/>
				<param name="trace_pattern" value="BtPrj.*responseSetLocalBluetoothName.*Result=True"/>
				<param name="timeout" value="2000"/>
			</params>
		</action>
		<action>
			<command executor="target">execute_callback</command>
			<params>
				<param name="process" value="ScpCtrl_HU"/>
				<param name="callback_name" value="DIS2_SCP_BluetoothProj_ActivateDiscoverableMode"/>
				<param name="callback_value" value="1"/>
			</params>
		</action>
		<action>
			<command executor="target">wait_for_traces</command>
			<params>
				<param name="trace_pattern" value="BtPrj.*request.*DiscoverableMode.*activate=True"/>
				<param name="timeout" value="2000"/>
			</params>
		</action>
		<action>
			<command executor="TEL_1">connect_to_target</command>
			<params>
				<param name="target_name" value="~BT_DEVICE_NAME~"/>
			</params>
		</action>
		<action>
			<command executor="target">wait_for_traces</command>
			<params>
				<param name="trace_pattern" value="BtPrjC.*PasskeyState=PS_SSP_SHOW_AND_CONFIRM.*DeviceAddress=#BT_DEVICE_ADDRESS#, DeviceName.*Passkey=#PASSKEY#"/>
				<param name="timeout" value="1000"/>
			</params>
		</action>
		<action>
			<command executor="TEL_1">set_pin</command>
			<params>
				<param name="pin" value="~PASSKEY~"/>
			</params>
		</action>
	</actions>
</test>